    "react-native-safe-area-context": "^4.6.3",
    "@expo/vector-icons": "*",
    "zustand": "^4.5.2",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.5.0",
    "zod": "^3.22.2",
    "react-native-svg": "^13.11.0",
    "axios-mock-adapter": "^1.21.2"
  },
  "devDependencies": {
